<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/bgmain1"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_gravity="left|top" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_2" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_3" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_4" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_5" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Red"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView9" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Orange"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Yellow"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView11" />
                <TextView
                android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Green"
                    android:textColor="@android:color/white"
                android:id="@+id/textView12" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Blue"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView13" />
            </TableRow>



            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/white"
                    android:id="@+id/imb_Kind_Read_6" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_7" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_8" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/brown"
                    android:layout_margin="5dp"
                    android:id="@+id/imb_Kind_Read_9" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/purple"
                    android:id="@+id/imb_Kind_Read_10" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="White"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView14" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Gray"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Black"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView16" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Brown"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView17" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Purple"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView18" />
            </TableRow>

        </TableLayout>
    </HorizontalScrollView>

</FrameLayout>